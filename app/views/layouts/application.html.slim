doctype html
html
  head
    meta content="width=device-width, initial-scale=1.0" name="viewport"
      title= content_for?(:title) ? yield(:title) : "Bian Dang NYC"
      meta content=(content_for?(:description) ? yield(:description) : "Bian Dang NYC") name="description"
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
  body
    header
      = render 'layouts/navigation'
      .clearfix
    main role="main"
      = render 'layouts/carousel'
      = render 'layouts/messages'
      .container
        = yield
      .row.footer
        .col-md-5.col-md-offset-1.bottom
          h1 Tweets
          - bdtw = Twitter.user_timeline("biandangnyc")
          - 0.upto(2) do |i|
            .tweet
              = " #{bdtw[i][:text]}"
              .pull-right
                br
                = " #{bdtw[i][:created_at].strftime("%I:%M%p on %B %d")}"
              .clearfix
        .col-md-5.bottom
          h1 Location
          .location 53rd Street between Park and Lexington Avenue
          .location New York, NY 10022
          .location Monday to Friday, 11:30am to 2:30pm
          .location Weekends and Holidays, please check our <a href='http://twitter.com/biandangnyc'>Twitter</a> feed
          .location +1 (212) 695-5995
      .footer
        .col-md-10.col-md-offset-1.footer
          span &copy; 2013
          a href='http://www.luckmgmt.com'   Luck Management Corp.
          span.pull-right
            a href="#" Back to top


